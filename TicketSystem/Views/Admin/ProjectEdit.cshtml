@{
    ViewBag.Title = "Projekt Bearbeiten";
}
@model Project
    <h1 class="page-title centered-box" style="margin-top:40px">Projekt Bearbeiten</h1>
    <div class="centered-box">
        <div class="stats-text" style="padding: 10px; width: 400px">
            <form asp-action="ProjectEdit">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mt-3">
                    <div style="display: flex; justify-content: space-between">
                        <label asp-for="Title">Titel</label>
                        <input style="justify-content:left" asp-for="Title" />
                    </div>
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="mt-3">
                    <div style="display: flex; justify-content: space-between">
                        <label asp-for="Description">Beschreibung</label>
                        <input asp-for="Description" />
                    </div>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="mt-3">
                    <div style="display: flex; justify-content: space-between">
                        <label asp-for="StartDate">Anfangsdatum</label>
                        <input asp-for="StartDate" />
                    </div>
                    <span asp-validation-for="StartDate"></span>
                </div>
                <div class="mt-3">
                    <div style="display: flex; justify-content: space-between">
                        <label asp-for="EndDate">Vsl. Enddatum</label>
                        <input asp-for="EndDate" />
                    </div>
                    <span asp-validation-for="EndDate"></span>
                </div>
                <div class="mt-3">
                    <div style="display: flex; justify-content: space-between; margin-right:15px">
                        <label>Projekt Beenden?</label>
                        <input type="checkbox" asp-for="Closed" />
                        </div>
                    <span asp-validation-for="Closed"></span>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-container click-btn" style="background-color: green;">Speichern</button>
                </div>
            </form>
            <form asp-action="ProjectDelete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-container click-btn mb-2" style="background-color: red;margin-top: 8px" onclick="return confirm('Dieses Projekt endgültig löschen?');">Löschen</button>
                <button type="button" onclick="history.back()" class="btn btn-container click-btn mb-2" style="margin-top: 8px">Zurück</button>
            </form>
        </div>
    </div>