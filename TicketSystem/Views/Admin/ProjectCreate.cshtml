@{
    ViewBag.Title = "Projekt Anlegen";
}
@model Project
<h1 class="page-title centered-box" style="margin-top: 40px;">Projekt Anlegen</h1>
<div class="centered-box">
    <div class="stats-text" style="padding: 10px; width: 400px">
        <form asp-action="ProjectCreate" method="post">
            <div class="mt-3 mb-2">
                <div style="display: flex; justify-content: space-between">
                    <label asp-for="Title">Titel</label>
                    <input asp-for="Title" />
                </div>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="mt-3 mb-2">
                <div style="display: flex; justify-content: space-between">
                    <label asp-for="Description">Beschreibung</label>
                    <input asp-for="Description" />
                </div>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="mt-3 mb-2">
                <div style="display: flex; justify-content: space-between">
                    <label asp-for="StartDate">Anfangsdatum</label>
                    <input asp-for="StartDate" />
                </div>
                <span asp-validation-for="StartDate"></span>
            </div>
            <div class="mt-3 mb-2">
                <div style="display: flex; justify-content: space-between">
                    <label asp-for="EndDate">Vsl. Enddatum</label>
                    <input asp-for="EndDate" />
                </div>
                <span asp-validation-for="EndDate"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-container  click-btn">Anlegen</button>
                <a asp-controller="Admin" asp-action="ProjectsList" class="btn btn-container click-btn mb-2">Projektliste</a>
            </div>
        </form>
    </div>
</div>